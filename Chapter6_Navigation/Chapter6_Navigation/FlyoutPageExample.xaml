<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chapter6_Navigation.FlyoutPageExample"
             Title="FlyoutPageExample">
    <FlyoutPage.Flyout>
        <ContentPage Title="Main page">
            <Label Text="This is the Master" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage>
            <Label Text="This is the Details" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>